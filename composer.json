{
	"name": "lia/lia_hyphenator",
	"type": "typo3-cms-extension",
	"description": "Wrapper for Word-Hyphenation for PHP based on the TeX-Hyphenation algorithm",
	"authors": [
		{
			"name": "LOUIS Typo3 Developers",
			"email": "info@dev.louis.info",
			"homepage": "https://www.louis.info",
			"role": "Developer"
		}
	],
	"license": "GPL-2.0-or-later",
	"require": {
		"typo3/cms-core": "^12.4",
		"org_heigl/hyphenator": "^3.1.0"
	},
	"require-dev": {
		"typo3/testing-framework": "^8.0.9",
		"phpunit/phpunit": "^10.5",
		"typo3/coding-standards": "^0.8.0"
	},
	"autoload": {
		"psr-4": {
			"LIA\\LiaHyphenator\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"LIA\\LiaHyphenator\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/lia-hyphenator": "self.version"
	},
	"scripts": {
		"post-autoload-dump": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
		],
		"test:create-directories": "mkdir -p .Build/public/typo3temp/var/tests",
		"test:functional": [
			"@tests:create-directories",
			"typo3DatabaseUsername=li-dev typo3DatabasePassword=meier typo3DatabaseName=typo3_test  find 'Tests/Functional' -wholename '*Test.php' -exec bash -c 'echo; echo \\\"Running functional test suite {} \\\"; vendor/bin/phpunit -c Build/phpunit/FunctionalTests.xml {}' \\;"
		],
		"test:unit": [
			"[ -e vendor/bin/phpunit ] || composer update --ansi",
			"export TYPO3_PATH_WEB=$PWD/.Build/Web && vendor/bin/phpunit -c Build/phpunit/UnitTests.xml --colors=always"
		],
		"test": [
			"@test:unit",
			"@test:functional"
		]
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "lia_hyphenator",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web",
			"app-dir": ".Build"
		}
	},
	"config": {
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	}
}
